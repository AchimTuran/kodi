			</control>
			<control type="grouplist" id="9100">
				<left>10</left>
				<width>200</width>
				<top>105</top>
				<itemgap>dialogbuttons_itemgap</itemgap>
				<onleft>9100</onleft>
				<onright>9200</onright>
				<include content="DefaultDialogButton">
					<description>add mode button</description>
					<param name="id" value="9101" />
					<param name="label" value="$LOCALIZE[15019]" />
					<param name="width" value="200" />
				</include>
				<include content="DefaultDialogButton">
					<description>remove mode button</description>
					<param name="id" value="9102" />
