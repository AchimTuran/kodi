			<control type="grouplist" id="9400">
				<left>1300</left>
				<width>470</width>
				<top>105</top>
				<itemgap>dialogbuttons_itemgap</itemgap>
				<onleft>9200</onleft>
				<onright>9300</onright>
				<include content="DefaultDialogButton">
					<description>Close button</description>
					<param name="id" value="9401" />
