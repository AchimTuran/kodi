					<param name="id" value="9103" />
					<param name="label" value="$LOCALIZE[386]" />
					<param name="width" value="200" />
				</include>
			</control>
			<control type="group" id="9200">
				<top>85</top>
				<control type="group">
					<description>active modes</description>
					<left>195</left>
					<include content="AudioDSPModeList">
						<param name="sublabel" value="$LOCALIZE[15051]: $INFO[Container(9201).NumItems]" />
						<param name="scrollbar_id" value="9201" />
						<param name="list_id" value="9202" />
						<param name="onright" value="9400" />
						<param name="onleft" value="9100" />
