						<top>0</top>
						<right>0</right>
						<height>130</height>
						<textcolor>grey</textcolor>
						<font>font25_title</font>
						<aligny>center</aligny>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="330" height="110">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<right>0</right>
						<height>130</height>
						<animation effect="fade" start="100" end="20" time="200" condition="!Control.HasFocus(9000)">Conditional</animation>
						<texture border="40" colordiffuse="button_focus">buttons/dialogbutton-fo.png</texture>
					</control>
					<control type="label">
						<left>0</left>
						<top>0</top>
						<right>0</right>
						<height>130</height>
						<font>font25_title</font>
						<aligny>center</aligny>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
